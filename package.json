{
  "name": "nimbus",
  "version": "1.0.0",
  "description": "AI-powered Weather CLI with natural language processing",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "nimbus": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "weather",
    "cli",
    "ai",
    "openai",
    "openweather",
    "typescript",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "openai": "^4.20.1",
    "axios": "^1.6.2",
    "zod": "^3.22.4",
    "chalk": "^5.3.0",
    "boxen": "^7.1.1",
    "figlet": "^1.6.0",
    "ora": "^7.0.1",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/figlet": "^1.5.8",
    "typescript": "^5.3.2",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
