{
  "name": "nimbus-weather-cli",
  "version": "1.2.1",
  "description": "Get instant weather forecasts and AI-powered insights from your terminal using natural language queries.",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "nimbus": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "start:dev": "NODE_ENV=development node dist/cli.js",
    "test:dev": "NODE_ENV=development DEBUG=1 node dist/cli.js",
    "deploy:build": "npm run clean && npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "weather",
    "cli",
    "ai",
    "openai",
    "openweather",
    "typescript",
    "terminal",
    "nimbus",
    "weather-cli",
    "natural-language",
    "fahrenheit",
    "imperial",
    "us-weather"
  ],
  "author": "Rithvik",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "figlet": "^1.6.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "openai": "^4.20.1",
    "ora": "^7.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/figlet": "^1.5.8",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
